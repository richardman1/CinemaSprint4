@{
    ViewBag.Title = "SendNewsletter";
}
<button type="button" class="btn btn-lg btn-danger" onclick="location.href='@Url.Action("Logout", "Account")'">Afmelden</button>
<h2>SendNewsletter</h2>

@if (TempData["Message"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["Message"]</p>
}

@if (TempData["FailMessage"] != null)
{
    <p class="alert alert-danger" id="successMessage">@TempData["FailMessage"]</p>
}
@using (Html.BeginForm("SendNewsletter", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label class="control-label col-md-2" style="float: left;">De nieuwsbrief: </label>
        <input type="file" name="File" id="File" />
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Verzend!" class="btn btn-default" />
        </div>
    </div>
}

<button type="button" class="btn btn-lg btn-danger" onclick="location.href='@Url.Action("Index", "Account")'">Terug naar home</button>